#!/bin/bash
#SBATCH --time=36:00:00
#SBATCH --ntasks=1
#SBATCH --nodes=1
#SBATCH --mem-per-cpu=42G
#SBATCH --cpus-per-task=20
#SBATCH -J swiftseq

conda activate swiftseq
ulimit -n 8192
snakemake -j 20 -p

# If you want to use more/less than 20 CPUs, please change it in snakemake -j AND in --cpus-per-task

